<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
http://www.springframework.org/schema/context
http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.example.template"/>
    
    <bean class="org.springframework.boot.context.embedded.tomcat.TomcatEmbeddedServletContainerFactory">
        <property name="port" value="80"/>
        <property name="sessionTimeout" value="30000"/>
    </bean>

    <bean id="fileHandler" class="java.util.logging.FileHandler">
        <constructor-arg value="./src/main/resources/logs/my-log.log"/>
        <property name="formatter" ref="simpleFormatter"/>
    </bean>
    
    <bean id="simpleFormatter" class="java.util.logging.SimpleFormatter"/>
    
    <bean name="bookLogger" class="java.util.logging.Logger">
        <constructor-arg value="bookLogger"/>
    </bean>
</beans>
